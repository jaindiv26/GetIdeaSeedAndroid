<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srSwipeRefresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/lightGrey">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rvPlantASeed"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPlantASeed"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/plantaseedtop"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_below="@id/ivPlantASeed"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    >

                    <TextView
                        android:id="@+id/tvPlantASeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plant A Seed"
                        android:textSize="32dp"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="32dp"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvPlantASeed"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="40dp"
                        >

                        <ImageView
                            android:id="@+id/ivPlantASeedImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/animated_add_button"
                            android:layout_margin="16dp"
                            android:backgroundTint="@color/darkGrey"
                            />


                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvNewActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </android.support.v7.widget.RecyclerView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabNewIdea"
                android:src="@drawable/ic_lightbulb_outline_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                />

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
