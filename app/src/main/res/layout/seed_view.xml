<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    android:layout_marginTop="16dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/profile_pic"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile name"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_toRightOf="@id/ivProfilePic"
            />

        <ImageView
            android:id="@+id/ivWorkProgress"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_below="@id/ivProfilePic"
            android:background="@drawable/just_planted_lightbulb_img"
            />

        <TextView
            android:id="@+id/tvOriginality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivWorkProgress"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:text="Originality"
            android:textSize="16dp"
            />

        <ProgressBar
            android:id="@+id/pbOriginality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOriginality"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            style="?android:attr/progressBarStyleHorizontal"
            />

        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pbOriginality"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:text="Difficulty"
            android:textSize="16dp"
            />

        <ProgressBar
            android:id="@+id/pbDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDifficulty"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            style="?android:attr/progressBarStyleHorizontal"
            />

        <TextView
            android:id="@+id/tvProjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Title"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/pbDifficulty"
            />

        <TextView
            android:id="@+id/tvProjectDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Description"
            android:layout_below="@id/tvProjectTitle"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/btFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give Feedback"
            android:background="@color/buttonGreen"
            android:textSize="12dp"
            android:layout_below="@id/tvProjectDescription"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            />

        <ImageView
            android:id="@+id/ivBulb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/like_bulb_no_like"
            android:layout_below="@id/tvProjectDescription"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/tvNoOfBulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#34"
            android:layout_below="@id/ivBulb"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>