<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardBackgroundColor="@color/white"
    android:background="@color/black"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ivWorkProgress"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"
            />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivWorkProgress"
            android:layout_marginTop="16dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/cvProfilePic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                app:cardCornerRadius="8dp"
                >

                <ImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile_pic"
                    android:scaleType="centerCrop"
                    />


            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile name"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/cvProfilePic"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>



        <TextView
            android:id="@+id/tvOriginality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout"
            android:text="Originality"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:id="@+id/tvProgressOriginality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            />

        <ProgressBar
            android:id="@+id/pbOriginality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/OriginalityProgressBar"
            android:layout_below="@id/tvOriginality"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:min="0"
            android:max="10"
            />

        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pbOriginality"
            android:text="Difficulty"
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:id="@+id/tvProgressDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pbOriginality"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            />

        <ProgressBar
            android:id="@+id/pbDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DifficultyProgressBar"
            android:layout_below="@id/tvDifficulty"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:min="0"
            android:max="10"
            />

        <TextView
            android:id="@+id/tvProjectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Title"
            android:textStyle="italic"
            android:textSize="36dp"
            android:textColor="@color/lightBlack"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/pbDifficulty"
            />

        <TextView
            android:id="@+id/tvProjectDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Description"
            android:textSize="16dp"
            android:textColor="@color/lightBLack2"
            android:layout_below="@id/tvProjectTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:autoLink="web"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProjectDescription"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivLightBulbLiked"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        />

                    <CheckBox
                        android:id="@+id/cbLightBulbLiked"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:button="@null"
                        android:background="@null"
                        />

                </RelativeLayout>



                <TextView
                    android:id="@+id/tvNoOfBulb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="44"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/btFeedback"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_button"
                android:layout_centerVertical="true"
                android:text="Give Feedback"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginLeft="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>