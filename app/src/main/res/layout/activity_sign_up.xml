<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E7E8"
    android:weightSum="2"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ivAnimatedGIF2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Seed"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/pacifico"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lekton_italic"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="A place for your ideas to sprout"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E7E8"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tvSignUP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Sign Up"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/pacifico"
            />

        <EditText
            android:id="@+id/etNewUsername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tvSignUP"
            android:hint="Username"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_perm_identity_grey_400_18dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            />


        <EditText
            android:id="@+id/etEmailId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/etNewUsername"
            android:hint="E-mail ID"
            android:inputType="textEmailAddress"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_mail_outline_grey_400_18dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/etEmailId"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_lock_outline_grey_400_18dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/btSignUp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/etNewPassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Sign UP"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"
            />

    </RelativeLayout>

</LinearLayout>
