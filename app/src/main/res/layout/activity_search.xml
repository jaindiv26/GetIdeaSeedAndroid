<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGrey"
    >


    <RelativeLayout
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >

        <Button
            android:id="@+id/btCloseButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textColor="@color/darkGrey"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:id="@+id/tvSearchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btCloseButton"
            android:layout_centerVertical="true"
            android:text="Title"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llDifficultyOrigin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/llToolbar"
        android:layout_margin="16dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvDiff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difficulty"
                android:textSize="16dp"
                android:textColor="@color/darkGrey"
                android:layout_marginBottom="16dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_edittext"
                android:layout_marginRight="16dp"

                >
                <Spinner
                    android:id="@+id/spDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/difficulty"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    >

                </Spinner>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Originality"
                android:textSize="16dp"
                android:textColor="@color/darkGrey"
                android:layout_marginBottom="16dp"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_edittext"
                >

                <Spinner
                    android:id="@+id/spOriginality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/originality"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    >

                </Spinner>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/llDifficultyOrigin"
        android:layout_margin="16dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:textSize="16dp"
                android:textColor="@color/darkGrey"
                android:layout_marginBottom="16dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_edittext"
                android:layout_marginRight="16dp"
                >
                <Spinner
                    android:id="@+id/spProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/progress"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    >

                </Spinner>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/tvLightBulbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lightbulbs"
                android:textSize="16dp"
                android:textColor="@color/darkGrey"
                android:layout_marginBottom="16dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_edittext"
                >
                <Spinner
                    android:id="@+id/spLightBulbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/lightBulbs"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    >

                </Spinner>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/llProgress"
        android:background="@drawable/bg_button"
        android:text="Apply"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/btResetButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/llProgress"
        android:layout_toLeftOf="@id/btSearchButton"
        android:background="@drawable/bg_cancel_button"
        android:text="Reset"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        />

</RelativeLayout>