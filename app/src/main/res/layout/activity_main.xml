<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dexa.getideaseed.MainActivity"
    android:background="@color/lightGrey"
    >

    <TextView
        android:id="@+id/tvGreenBar"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/lightGreen"
        />

    <FrameLayout
        android:id="@+id/flSeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGreenBar"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSeedFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            >
        </android.support.v7.widget.RecyclerView>

    </FrameLayout>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="64dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/lightGrey"
            >

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:background="@drawable/home_botton"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/tvHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivHome"
                android:text="Home"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="96dp"
                />

            <TextView
                android:id="@+id/tvHomeHighlight"
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:layout_below="@id/tvHomeButton"
                android:background="@color/lightGreen"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="92dp"
                android:layout_marginBottom="8dp"
                />

            <ImageView
                android:id="@+id/ivExplore"
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:background="@drawable/explore_botton"
                android:layout_alignParentRight="true"
                android:layout_marginRight="95dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tvExploreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivExplore"
                android:text="Explore"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="96dp"
                />

            <TextView
                android:id="@+id/tvExploreHighlight"
                android:layout_width="38dp"
                android:layout_height="2dp"
                android:layout_below="@id/tvExploreButton"
                android:background="@color/lightGreen"
                android:layout_alignParentRight="true"
                android:layout_marginRight="94dp"
                android:layout_marginBottom="8dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

