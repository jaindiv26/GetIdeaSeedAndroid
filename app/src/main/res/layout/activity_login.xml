<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
              android:weightSum="2"
              android:background="#E6E7E8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ivAnimatedGIF"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Seed"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/pacifico"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lekton_italic"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="A place for your ideas to sprout"
            android:textColor="@color/black"
            android:textSize="24dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login In"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/pacifico"
            />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tvLogin"
            android:hint="Username"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_perm_identity_grey_400_18dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/etUserName"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_lock_outline_grey_400_18dp"
            android:drawablePadding="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_marginTop="32dp"
            android:weightSum="2"
            >

            <Button
                android:id="@+id/btLogin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Login"
                android:layout_weight="1"
                android:layout_margin="24dp"
                android:background="@drawable/bg_button"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btSignUp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Sign up"
                android:layout_margin="24dp"
                android:background="@drawable/bg_button"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>