<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/srExplorer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvExplorer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            />

        <RelativeLayout
            android:id="@+id/rvOnNoResultFound"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/lightGrey"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:animateLayoutChanges="true"
                android:background="@color/lightGrey"
                >

                <TextView
                    android:id="@+id/tvNoResultFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="No Results"
                    android:textSize="32dp"
                    android:textColor="@color/darkGrey"
                    android:textStyle="italic"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="40dp"
                    />

                <RelativeLayout
                    android:id="@+id/rlSearchImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/tvNoResultFound"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/bg_plant_a_seed"
                    android:clickable="true"
                    >

                    <ImageView
                        android:id="@+id/ivSearchImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="16dp"
                        android:background="@drawable/ic_search_white_24dp"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>




</android.support.v4.widget.SwipeRefreshLayout>