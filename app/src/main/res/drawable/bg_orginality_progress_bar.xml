<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="8dp" />
            <gradient
                android:startColor="#e9e9e9"
                android:centerColor="#e9e9e9"
                android:endColor="#e9e9e9"
                />
            <stroke android:color="#8f8f8f" android:width="0.5dp" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="8dp"
                    />
                <gradient
                    android:startColor="#f9f2d6"
                    android:centerColor="#fff200"
                    android:centerY="1.0"
                    android:endColor="#fff200" />
                <stroke android:color="#8f8f8f" android:width="0.5dp" />
            </shape>
        </clip>
    </item>
</layer-list>
